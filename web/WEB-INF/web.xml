<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>loginAdmin</servlet-name>
        <servlet-class>Servlets.loginAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginAlumno</servlet-name>
        <servlet-class>Servlets.loginAlumno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>generarEncuesta</servlet-name>
        <servlet-class>Servlets.generarEncuesta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>activarEncuesta</servlet-name>
        <servlet-class>Servlets.activarEncuesta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>encuestaAlumno</servlet-name>
        <servlet-class>Servlets.encuestaAlumno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cambiarContraseña</servlet-name>
        <servlet-class>Servlets.cambiarContraseña</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginAdmin</servlet-name>
        <url-pattern>/loginAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginAlumno</servlet-name>
        <url-pattern>/loginAlumno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>generarEncuesta</servlet-name>
        <url-pattern>/generarEncuesta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>activarEncuesta</servlet-name>
        <url-pattern>/activarEncuesta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>encuestaAlumno</servlet-name>
        <url-pattern>/encuestaAlumno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cambiarContraseña</servlet-name>
        <url-pattern>/cambiarContrase_a</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
